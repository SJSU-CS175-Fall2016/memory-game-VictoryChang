<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.victorychang.memorygame.GameActivity"
    android:visibility="visible"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Memory Game"
        android:id="@+id/gameTitleTextField"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:orientation="horizontal"
        android:id="@+id/gameGrid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button00"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button01"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button02"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button03"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button22"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button30"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button31"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button32"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button33"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button40"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button41"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button42"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button43"
            android:src="@drawable/cardback"
            android:onClick="imageButtonClickAction" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points: 0"
        android:id="@+id/pointsTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Match: Continue..."
        android:id="@+id/nomatchButton"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:onClick="nomatchContinueClickAction"
        android:layout_below="@+id/gameTitleTextField"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
